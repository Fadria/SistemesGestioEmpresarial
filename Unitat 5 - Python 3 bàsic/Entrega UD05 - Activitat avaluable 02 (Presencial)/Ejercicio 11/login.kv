<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Bienvenido, inicie sesión'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Usuario'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Contraseña'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

            Label:
                id: resultadoLogin
                halign: 'center'
                font_size: 18
                text_size: root.width-20, 20

        Button:
            text: 'Iniciar sesión'
            font_size: 24

            on_press: root.do_login(login.text, password.text, resultadoLogin)