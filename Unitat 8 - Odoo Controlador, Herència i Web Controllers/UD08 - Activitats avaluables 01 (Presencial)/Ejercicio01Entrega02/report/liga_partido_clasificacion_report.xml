<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ejemplo de informe asociado a partido (se genera al darle  aimprimir 
        desde la vista Form de un partido) -->
    <template id="report_clasificacion_view">
        <!-- Aqui la estructura a seguir -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2 t-field="doc.id" />
                        <!-- Datos del partido-->
                        <p>
                            Equipo casa:
                            <span t-field="doc.equipo_casa" />
                        </p><p>
                            Goles casa:
                            <span t-field="doc.goles_casa" />
                        </p><p>
                            Equipo fuera:
                            <span t-field="doc.equipo_fuera" />
                        </p><p>
                            Goles fuera:
                            <span t-field="doc.goles_fuera" />
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Realmente, este es el informe, lo de arriba es la plantilla que utilizara el informe -->
    <report id="report_clasificacion" model="liga.partido" string="Informe clasificacion de cada partido" name="Ejercicio01Entrega02.report_clasificacion_view" file="Ejercicio01Entrega02.report_clasificacion_view" report_type="qweb-pdf" />


</odoo>