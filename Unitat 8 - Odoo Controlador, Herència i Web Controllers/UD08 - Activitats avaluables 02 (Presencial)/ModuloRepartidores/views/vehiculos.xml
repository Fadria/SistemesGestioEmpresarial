<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='vehiculos_action' model='ir.actions.act_window'>
        <field name="name">Vehiculos</field> <!-- Nombre de la ventana -->
        <field name="res_model">vehiculos</field> <!-- Indicamos el modelo en el que se basa la vista -->
        <field name="view_mode">tree,form</field> <!-- Indicamos los diferentes modos de visualización -->
    </record>

    <!-- Añadimos esta vista al menú principal -->
    <menuitem name="Vehiculos" id="vehiculos" action="vehiculos_action" parent="empresa_transportes"/>

    <!-- Vista en formato de árbol -->
    <record id="vehiculos_tree" model="ir.ui.view">
        <field name="name">Lista de vehiculos</field> <!-- Nombre de la vista -->
        <field name="model">vehiculos</field> <!-- Modelo usado en la vista -->
        <field name="arch" type="xml">
            <tree> <!-- Indicamos los campos del modelo a mostrar -->
                <field name="tipo"/>
                <field name="matricula"/>
                <field name="foto" widget="image" class="oe_avatar"/>            
                <field name="descripcion"/>
            </tree>
        </field>
    </record>
</odoo>